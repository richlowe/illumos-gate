#
#	Path to the base of the uts directory tree (usually /usr/src/uts).
#
UTSBASE = ../..

#
#	Include common rules.
#
include $(UTSBASE)/armv8/meson-gxbb/Makefile.meson-gxbb

def		:=	TARGET= def
all		:=	TARGET= all
install		:=	TARGET= install
install_h	:=	TARGET= install_h
clean		:=	TARGET= clean
clobber		:=	TARGET= clobber
check		:=	TARGET= check

#
#	Default build targets.
#
.KEEP_STATE:

def all clean clobber: unix $(MESON_GXBB_KMODS)

IMPLEMENTED_PLATFORM	= Amlogic,meson-gxbb

install:	$(ROOT_MESON_GXBB_DIR) .WAIT unix $(MESON_GXBB_KMODS)

install_h check:

unix $(MESON_GXBB_KMODS):	FRC
	@cd $@; pwd; $(MAKE) $(NO_STATE) $(TARGET)

#
#
#	Include common targets.
#
include $(UTSBASE)/armv8/meson-gxbb/Makefile.targ
