include $(SRC)/Makefile.master

SUBDIRS=	bridged ilbd in.chargend in.daytimed \
		in.discardd in.echod in.mpathd in.ndpd \
		in.ripngd in.timed inetd mdnsd pppoe \
		slpd vrrpd wpad

MSGSUBDIRS=	ilbd inetd vrrpd

include ../../Makefile.cmd
include ./Makefile.lib

POFILES=	inetd/inetd.po vrrpd/vrrpd.po
POFILE=		usr.lib.po

all:=		TARGET= all
install:=	TARGET= install
clean:=		TARGET= clean
clobber:=	TARGET= clobber
lint:=		TARGET= lint
_msg:=		TARGET= _msg

.KEEP_STATE:

all clean clobber lint: $(SUBDIRS)

install: $(SUBDIRS)

# in.iked is closed, but the link to isaexec was historically installed from
# here not usr/closed, only do it if we have closed-bins.
$(HAVE_CLOSED_BINS)install: $(ROOTLIBINET)/in.iked

$(ROOTLIBINET)/in.iked:
	$(RM) $(ROOTLIBINET)/in.iked
	$(LN) $(ISAEXEC) $(ROOTLIBINET)/in.iked

_msg: $(MSGSUBDIRS)

$(SUBDIRS): FRC
	@cd $@; pwd; $(MAKE) $(TARGET)

FRC:
