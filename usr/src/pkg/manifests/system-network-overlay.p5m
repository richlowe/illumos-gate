$(MULTILIB_ONLY)dir path=usr/lib/varpd/$(ARCH64)
$(MULTILIB_ONLY)link path=usr/lib/varpd/$(ARCH64)/libvarpd_direct.so \
    target=libvarpd_direct.so.1
